<% pagination = paginate(@shops) if @shops.total_pages > 1 %>

<%= render layout: "shops/layout", locals: {
  sidebar: "shops/sidebars/facets"
} do %>

  <%= render "application/pagination", pagination: pagination if pagination %>

  <%= render "shops/shops_listing", shops: @shops %>

  <%= render "application/pagination", pagination: pagination if pagination %>

<% end %>
