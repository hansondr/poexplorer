<div class="result shop row-fluid">
  <div class="wrapper clearfix <%= shop.status_classes %>">

    <div class="span9">
      <p class="username small faded"><%= shop.username %></p>
      <h2><%= link_to shop.title(true), [shop.user, shop] %></h2>
      <div class="data">
        <p class="faded"><%= shop.indexed_at %></p>
        <p class="faded"><%= shop.last_updated_at %></p>
      </div>
    </div>

    <div class="span3">
      <%= shop.stats %>
    </div>

  </div>
</div>
