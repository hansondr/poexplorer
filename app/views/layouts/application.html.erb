<!DOCTYPE html>
<html>
<head>
  <%= render "layouts/head" %>
</head>
<body class="<%= body_classes %>">

  <%= render "layouts/layout/header/header" %>
  <%= render "sub_header" %>
  <%= render "layouts/flash", flash: flash %>

  <div id="content" class="wrapper-l">

    <div class="row-fluid">

      <div id="left-sidebar" class="span2">
        <%= yield :left_sidebar %>
      </div>

      <div class="span10">
        <div id="main-content">
          <div class="row-fluid">
            <div class="span12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

  <%= render "layouts/layout/footer" %>
  <%= render "layouts/common/bottom" %>
</body>
</html>
