<%= render layout: "users/layout", locals: { sidebar: "users/sidebars/show" } do %>

  <% if @user.is?(current_user) %>
    <% if @user.account %>
      <%= render "players/players_listing", players: @user.players %>
      <%= link_to "Add a character", new_player_path, class: "btn btn-success" %>
    <% else %>
      <%= render "users/link_poe_account" %>
    <% end %>
  <% else %>
    <%= render "players/players_listing", players: @user.players %>
  <% end %>

<% end %>
