<div class="nested-fields">

  <div class="box dark">
    <div class="gear box-content">
      <div class="row-fluid">
        <div class="span9">

          <% gear = GearFormDecorator.new(f) %>

          <div>
            <div class="row-fluid">
              <%= gear.skill_gems %>
            </div>
            <div class="row-fluid">
              <%= gear.description %>
              <%= gear.name %>
            </div>
            <div class="row-fluid">
              <%= gear.main %>
            </div>
          </div>

          <div>
            <%= link_to_remove_association "Delete", f, class: "btn" %>
          </div>
        </div>
        <div class="span3 w-2 h-4">
          <div class="sockets"></div>
        </div>
      </div>
    </div>
  </div>
</div>
